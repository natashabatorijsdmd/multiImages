<div class="container">

    {{!-- LOGO--}}
    <div class="container valign-wrapper">
         <div class="row"> 
                <div class="col s12 valign-wrapper">
                    <img class="logo" src="https://i.ibb.co/C5hmkFZ/snapp-2.png">
                </div>
         </div>
    </div>

    {{!-- RETURN TO DASHBOARD BUTTON --}}
    <div class="row left-align">
        <div class="col s12">
            <a id="backButton" class="waves-effect waves-light btn-small yellow darken-4 left" href="/"><i class="material-icons left">arrow_back</i>All Albums</a>
            </a>
        </div>

         </div>


 <!-- MODAL FOR ADDING A PHOTO TO A PRE-EXISTING ALBUM -->
<div id="modal2" class="modal">
    <div class="modal-content">
        <h3>Add Images</h3>
        <form action="/addPhoto/{{doc._id}}" method="POST" enctype="multipart/form-data">
            <div class="file-field input-field">
                <div class="btn">
                    <span>IMG</span>
                    <input type="file" multiple id="image" name="images" class="validate" required>
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <button class="btn waves-effect waves-light yellow darken-4" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </form>
    </div>
</div>

{{!-- ALBUM TITLE --}}
<div class="row">
    <div class="col s10">
       <h3>{{doc.title}}</h3>
    </div>
</div>

{{!-- ALBUM DESCRIPTION --}}
    <div class="row">
        <div class="col s10">
            <p>{{doc.desc}}</p>
        </div>

{{!-- ADD A PHOTO BUTTON --}}
         <div class="col s2">
            <a class="btn-floating btn-large waves-effect waves yellow darken-4 right modal-trigger" href="#modal2">
                <i class="material-icons">add</i></a>
        </div>
    </div>
 
    <hr>
    {{!-- DISPLAYS THE IMAGES WITHIN THE CURRENT ALBUM --}}
    <div class="row">
    {{#each doc.paths}}
    <div class="col s6 m6 l3">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="/{{this}}">
                </div>
                {{!-- THE REVEAL CARD WHEN IMAGE IS CLICKED--}}
                <div class="card-reveal">
                    <p>{{doc.date}}</p>
                    <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
                    <p><a href="http://localhost:3001/{{this}}" download="{{this}}">Download Image</a></p>
                </div>
            </div>
    </div>
        {{/each}}
        </div>
</div>

<script src="/js/script.js"></script>