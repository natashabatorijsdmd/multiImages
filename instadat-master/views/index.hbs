<div class="container" id="background">
<div class="container">
    <div class="row valign-wrapper">
        <div class="col s6">
            <img class="logo" src="https://i.ibb.co/C5hmkFZ/snapp-2.png">
        </div>
        <div class="col s6">
            <a class="btn-floating btn-large waves-effect waves-#619B8A right modal-trigger" href="#modal1">
                <i class="material-icons">add</i></a>
        </div>
    </div>
    <div class="row valign-wrapper">
        <div class="col s12">
            <h5 class="grey-text">All Albums</h5>
        </div>
    </div>
    <div class="row" id="imageContainer">
    </div>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h3>New Album</h3>
        <form action="/addAlbum" method="POST" enctype="multipart/form-data">
            <div class="input-field">
                <input id="title" name="title" type="text" class="validate" required>
                <label for="title">Title</label>
            </div>
            <div class="input-field">
                <input id="desc" name="desc" type="text" class="validate" required>
                <label for="desc">Description</label>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>IMG</span>
                    <input type="file" multiple id="image" name="images" class="validate" required>
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </form>
    </div>
</div>

</div>

